<div class="post_block">
	<%= content_tag(list_page? ? :h2 : :h1, post_title(post))%>
	<%= date_block(post.created_at.to_date) %><div class="clear"></div>
	
	<div class="post_body">
		<%= raw textilize post_page? ? post.body : post.intro %>
	</div>
  <% if action_name != 'show' %>
  	<%= link_to t('.view_more'), post_path(post) %> |
	  <%= link_to t('.comment'), post_path(post, :anchor => 'comments') %> 
	<% end %>

  <br/><br/>

	<% unless list_page? %>
		<div id="ad_block_bottom">
			<script type="text/javascript"><!--
			google_ad_client = "ca-pub-6226687068928040";
			/* Banner pie blog 3DS */
			google_ad_slot = "7727171914";
			google_ad_width = 468;
			google_ad_height = 15;
			//-->
			</script>
			<script type="text/javascript"
			src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
			</script>
		</div>
	<% end %>



  <div class="destroy_link">  
  	<%= admin_links(post) %>
  </div>
</div>